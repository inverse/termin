{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "extends": [
    "config:recommended"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "symfony",
      "versioning": "composer",
      "major": {
        "enabled": false
      },
      "matchPackageNames": [
        "symfony/{/,}**",
        "phpunit/phpunit{/,}**",
        "verifiedjoseph/ntfy-php-library{/,}**"
      ]
    }
  ]
}
